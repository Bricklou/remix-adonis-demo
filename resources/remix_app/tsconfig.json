{
  "extends": "@adonisjs/tsconfig/tsconfig.client.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
      "#/*": ["../../*"],
      "~/*": ["./*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["./types"]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "../../**/*.ts"]
}
